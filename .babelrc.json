                "_300": "#e2e8f0",
                "_400": "#cbd5e0",
                "_500": "#a0aec0",
                "_600": "#718096",
                "_700": "#4a5568",
                "_800": "#2d3748",
                "_900": "#1a202c"
              },
              "red": {
                "_100": "#fff5f5",
