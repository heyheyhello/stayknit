{
  "sourceMaps": true,
  "plugins": [
    [
      "macros",
      {
        "styletakeout": {
          "outputFile": "serve/takeout.css",
          // "timing": true,
          // "stdoutPatch": false
          // "beautify": false
          "variables": {
